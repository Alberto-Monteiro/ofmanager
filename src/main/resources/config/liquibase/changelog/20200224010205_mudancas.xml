<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet author="Alberto Monteiro" id="1582232551874-5">
        <sql dbms="h2, mysql"
             endDelimiter="\nGO"
             splitStatements="true"
             stripComments="true">
            INSERT INTO of_authority (name) VALUES ('ROLE_GESTOR_OF')
        </sql>

        <dropColumn tableName="servico_of">
            <column name="userid"/>
        </dropColumn>

        <addColumn tableName="servico_of">
            <column name="estado" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="observacao_do_gestor" type="${clobType}">
                <constraints nullable="true"/>
            </column>
            <column name="created_by" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="last_modified_by" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="last_modified_date" type="datetime">
                <constraints nullable="true"/>
            </column>
            <column name="gestor_da_of_id" type="bigint">
                <constraints nullable="true"/>
            </column>
            <column name="dono_da_of_id" type="bigint">
                <constraints nullable="true"/>
            </column>
            <column name="valor_ustibb" type="decimal(21,2)">
                <constraints nullable="true"/>
            </column>
        </addColumn>

        <dropDefaultValue tableName="servico_of" columnName="created_date" columnDataType="datetime"/>
        <dropDefaultValue tableName="servico_of" columnName="last_modified_date" columnDataType="datetime"/>

        <addForeignKeyConstraint baseColumnNames="dono_da_of_id" baseTableName="servico_of"
                                 constraintName="fk_servico_of_gestor_da_of_id" deferrable="false"
                                 initiallyDeferred="false" referencedColumnNames="id" referencedTableName="of_user"
                                 validate="true"/>
        <addForeignKeyConstraint baseColumnNames="gestor_da_of_id" baseTableName="servico_of"
                                 constraintName="fk_servico_of_dono_da_of_id" deferrable="false"
                                 initiallyDeferred="false" referencedColumnNames="id" referencedTableName="of_user"
                                 validate="true"/>
    </changeSet>
</databaseChangeLog>
